<div class="container mt-4">
  <h1><%= @bookstore.name %></h1>
  <p><strong>Address:</strong> <%= @bookstore.address %></p>
  <p><strong>Phone:</strong> <%= @bookstore.phone %></p>

  <div class="mt-3">
    <% if can? :update, @bookstore %>
      <%= link_to 'Edit', edit_bookstore_path(@bookstore), class: 'btn btn-warning btn-sm' %>
    <% end %>

    <% if can? :destroy, @bookstore %>
      <%= link_to 'Delete', bookstore_path(@bookstore), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm ml-2' %>
    <% end %>

    <%= link_to 'Back', bookstores_path, class: 'btn btn-secondary btn-sm ml-2' %>
  </div>
</div>
